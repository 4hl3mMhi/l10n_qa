<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="tax_report" model="account.tax.report">
        <field name="name">Tax Report</field>
        <field name="country_id" ref="base.qa"/>
    </record>

    <record id="tax_report_line_all_sales_base" model="account.tax.report.line">
        <field name="name">VAT on Sales and all other Outputs (Base)</field>
        <field name="report_id" ref="tax_report"/>
        <field name="sequence" eval="1"/>
    </record>

    <record id="tax_report_all_sales_base_five" model="account.tax.report.line">
        <field name="name">1. Standard Rated 5% (Base)</field>
        <field name="tag_name">1. VAT 5% (Base)</field>
        <field name="code">STD_SALE_B</field>
        <field name="parent_id" ref="tax_report_line_all_sales_base"/>
        <field name="report_id" ref="tax_report"/>
        <field name="sequence" eval="1"/>
    </record>

    <record id="tax_report_all_sales_base_zero" model="account.tax.report.line">
        <field name="name">2. Zero Rated (Base)</field>
        <field name="tag_name">2. Zero Rated (Base)</field>
        <field name="code">ZERO_SALE_B</field>
        <field name="parent_id" ref="tax_report_line_all_sales_base"/>
        <field name="report_id" ref="tax_report"/>
        <field name="sequence" eval="2"/>
    </record>

    <record id="tax_report_all_sales_base_exempt" model="account.tax.report.line">
        <field name="name">3. Exempt Sales (Base)</field>
        <field name="tag_name">3. Exempt Sales (Base)</field>
        <field name="code">EXM_SALE_B</field>
        <field name="parent_id" ref="tax_report_line_all_sales_base"/>
        <field name="report_id" ref="tax_report"/>
        <field name="sequence" eval="3"/>
    </record>

    <record id="tax_report_line_all_sales_tax" model="account.tax.report.line">
        <field name="name">VAT on Sales and all other Outputs (Tax)</field>
        <field name="report_id" ref="tax_report"/>
        <field name="sequence" eval="2"/>
    </record>

    <record id="tax_report_all_sales_tax_five" model="account.tax.report.line">
        <field name="name">1. Standard Rated 5% (Tax)</field>
        <field name="tag_name">1. VAT 5% (Tax)</field>
        <field name="code">STD_SALE_T</field>
        <field name="parent_id" ref="tax_report_line_all_sales_tax"/>
        <field name="report_id" ref="tax_report"/>
        <field name="sequence" eval="1"/>
    </record>

    <record id="tax_report_all_sales_tax_zero" model="account.tax.report.line">
        <field name="name">2. Zero Rated (Tax)</field>
        <field name="tag_name">2. Zero Rated (Tax)</field>
        <field name="code">ZERO_SALE_T</field>
        <field name="parent_id" ref="tax_report_line_all_sales_tax"/>
        <field name="report_id" ref="tax_report"/>
        <field name="sequence" eval="2"/>
    </record>

    <record id="tax_report_all_sales_tax_exempt" model="account.tax.report.line">
        <field name="name">3. Exempt Sales (Tax)</field>
        <field name="tag_name">3. Exempt Sales (Tax)</field>
        <field name="code">EXM_SALE_T</field>
        <field name="parent_id" ref="tax_report_line_all_sales_tax"/>
        <field name="report_id" ref="tax_report"/>
        <field name="sequence" eval="3"/>
    </record>

    <record id="tax_report_line_expense_base" model="account.tax.report.line">
        <field name="name">VAT on Expenses and all other Inputs (Base)</field>
        <field name="report_id" ref="tax_report"/>
        <field name="sequence" eval="3"/>
    </record>

    <record id="tax_report_expense_base_five" model="account.tax.report.line">
        <field name="name">5. Standard Rated 5% Expenses (Base)</field>
        <field name="tag_name">5. VAT 5% Expenses (Base)</field>
        <field name="code">STD_PUR_B</field>
        <field name="parent_id" ref="tax_report_line_expense_base"/>
        <field name="report_id" ref="tax_report"/>
        <field name="sequence" eval="1"/>
    </record>

    <record id="tax_report_expense_base_zero" model="account.tax.report.line">
        <field name="name">6. Zero Rated (Base)</field>
        <field name="tag_name">6. Zero Rated (Base)</field>
        <field name="code">ZERO_PUR_B</field>
        <field name="parent_id" ref="tax_report_line_expense_base"/>
        <field name="report_id" ref="tax_report"/>
        <field name="sequence" eval="2"/>
    </record>

    <record id="tax_report_expense_base_exempt" model="account.tax.report.line">
        <field name="name">7. Exempt Expenses (Base)</field>
        <field name="tag_name">7. Exempt Expenses (Base)</field>
        <field name="code">EXM_PUR_B</field>
        <field name="parent_id" ref="tax_report_line_expense_base"/>
        <field name="report_id" ref="tax_report"/>
        <field name="sequence" eval="3"/>
    </record>

    <record id="tax_report_line_expense_tax" model="account.tax.report.line">
        <field name="name">VAT on Expenses and all other Inputs (Tax)</field>
        <field name="report_id" ref="tax_report"/>
        <field name="sequence" eval="4"/>
    </record>

    <record id="tax_report_expense_tax_five" model="account.tax.report.line">
        <field name="name">5. Standard Rated 5% Expenses (Tax)</field>
        <field name="tag_name">5. VAT 5% Expenses (Tax)</field>
        <field name="code">STD_PUR_T</field>
        <field name="parent_id" ref="tax_report_line_expense_tax"/>
        <field name="report_id" ref="tax_report"/>
        <field name="sequence" eval="1"/>
    </record>

    <record id="tax_report_expense_tax_zero" model="account.tax.report.line">
        <field name="name">6. Zero Rated (Tax)</field>
        <field name="tag_name">6. Zero Rated (Tax)</field>
        <field name="code">ZERO_PUR_T</field>
        <field name="parent_id" ref="tax_report_line_expense_tax"/>
        <field name="report_id" ref="tax_report"/>
        <field name="sequence" eval="2"/>
    </record>

    <record id="tax_report_expense_tax_exempt" model="account.tax.report.line">
        <field name="name">7. Exempt Expenses (Tax)</field>
        <field name="tag_name">7. Exempt Expenses (Tax)</field>
        <field name="code">EXM_PUR_T</field>
        <field name="parent_id" ref="tax_report_line_expense_tax"/>
        <field name="report_id" ref="tax_report"/>
        <field name="sequence" eval="3"/>
    </record>

    <record id="tax_report_line_net_vat_due" model="account.tax.report.line">
        <field name="name">Net VAT Due</field>
        <field name="formula">None</field>
        <field name="report_id" ref="tax_report"/>
        <field name="sequence" eval="5"/>
    </record>

    <record id="tax_report_line_net_vat_due_1" model="account.tax.report.line">
        <field name="name">Total value of due tax for the period</field>
        <field name="formula">STD_SALE_T + ZERO_SALE_T + EXM_SALE_T</field>
        <field name="parent_id" ref="tax_report_line_net_vat_due"/>
        <field name="report_id" ref="tax_report"/>
        <field name="sequence" eval="1"/>
    </record>

    <record id="tax_report_line_net_vat_due_2" model="account.tax.report.line">
        <field name="name">Total value of recoverable tax for the period</field>
        <field name="formula">STD_PUR_T + ZERO_PUR_T + EXM_PUR_T</field>
        <field name="parent_id" ref="tax_report_line_net_vat_due"/>
        <field name="report_id" ref="tax_report"/>
        <field name="sequence" eval="2"/>
    </record>

    <record id="tax_report_line_net_vat_due_3" model="account.tax.report.line">
        <field name="name">Net VAT due (or reclaimed) for the period</field>
        <field name="formula">STD_SALE_T + ZERO_SALE_T + EXM_SALE_T - (STD_PUR_T + ZERO_PUR_T + EXM_PUR_T)</field>
        <field name="parent_id" ref="tax_report_line_net_vat_due"/>
        <field name="report_id" ref="tax_report"/>
        <field name="sequence" eval="3"/>
    </record>

</odoo>
